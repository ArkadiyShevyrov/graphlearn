{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GraphExtraction",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "nodes",
    "edges"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": [
              "concept",
              "definition",
              "theorem",
              "example",
              "resource",
              "topic"
            ]
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "source_id": {
                "type": "string"
              },
              "locator": {
                "type": "string",
                "description": "Page/section/line/span reference"
              }
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "from",
          "target",
          "relation"
        ],
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "target": {
            "type": "string",
            "minLength": 1
          },
          "relation": {
            "type": "string",
            "enum": [
              "requires",
              "defines",
              "uses",
              "illustrates",
              "applies_to",
              "related_to",
              "part_of"
            ]
          },
          "weight": {
            "type": "number"
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "source_id": {
                "type": "string"
              },
              "locator": {
                "type": "string"
              }
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
